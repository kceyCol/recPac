{
  "name": "recpac",
  "version": "1.0.0",
  "description": "RecPac - Aplicativo de Gravação e Transcrição",
  "scripts": {
    "dev": "docker-compose up --build",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "cd backend && npm run dev",
    "dev:python": "cd python-services && python app.py",
    "install:all": "npm run install:frontend && npm run install:backend && npm run install:python",
    "install:frontend": "cd frontend && npm install",
    "install:backend": "cd backend && npm install",
    "install:python": "cd python-services && pip install -r requirements.txt",
    "test": "npm run test:frontend && npm run test:backend",
    "test:frontend": "cd frontend && npm test",
    "test:backend": "cd backend && npm test",
    "build": "cd frontend && npm run build",
    "start": "docker-compose up",
    "stop": "docker-compose down",
    "clean": "docker-compose down -v --rmi all"
  },
  "keywords": [
    "audio",
    "transcription",
    "ai",
    "react",
    "node",
    "flask"
  ],
  "author": "RecPac Team",
  "license": "MIT",
  "dependencies": {
    "react-audio-recorder": "^2.2.0"
  }
}
